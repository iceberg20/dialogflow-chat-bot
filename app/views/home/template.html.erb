	function setBotResponse(res){
		res = "<div class='row msg_container base_receive'> <div class='col-md-2 col-xs-2 avatar'> <img src='http://www.bitrebels.com/wp-content/uploads/2011/02/Original-Facebook-Geek-Profile-Avatar-1.jpg' class=' img-responsive '> </div> <div class='col-xs-10 col-md-10'> <div class='messages msg_receive'> <p> "+res+"</p> <time datetime='2009-11-13T20:00'>Timothy • 51 min</time> </div> </div> </div>";
		$("#response").append(res);
		scrollDiv();
	}
	// Auto Scroll Div Chat bot
	function scrollDiv()
	{
